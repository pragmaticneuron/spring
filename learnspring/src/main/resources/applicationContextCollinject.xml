<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans  
               http://www.springframework.org/schema/beans/spring-beans-4.0.xsd">



	<bean id="question" class="com.learn.spring.collectioninjections.Question">
		<constructor-arg value="10" type="int" />
		<constructor-arg value="answers please" type="String" />
		<constructor-arg>
		<list>
		<value>1st answer</value>
		<value>2nd answer</value>
		<value>3rd answer</value>
		<value>4th answer</value>
		</list>
		</constructor-arg>
	</bean>

</beans>  